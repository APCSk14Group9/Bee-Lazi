<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/city"
    android:orientation="vertical"
    tools:context="cs300.beelazi.PersonalEditActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/appLoginBackground"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#D0262626"
            android:padding="10dp"
            android:src="@drawable/account"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:hint="Your real name"
            android:paddingLeft="10dp"
            android:background="#D0262626"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/realName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#D0262626"
            android:padding="10dp"
            android:src="@drawable/food"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#D0262626"
            android:text="ADJUST FOOD FLAVOR"
            android:padding="5dp"
            android:textSize="15sp"
            android:id="@+id/adjustFood"
            android:textColor="@android:color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#D0262626"
            android:padding="10dp"
            android:src="@drawable/movie"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#D0262626"
            android:id="@+id/adjustMovie"
            android:padding="5dp"
            android:text="ADJUST MOVIE FLAVOR"
            android:textSize="15sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/saveButton"
            android:background="#D0262626"
            android:text="SAVE NAME"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>



</LinearLayout>
