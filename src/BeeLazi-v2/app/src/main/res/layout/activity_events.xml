<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="@drawable/city"
    android:orientation="vertical"
    tools:context="cs300.beelazi.EventsActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/appLoginBackground"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Activity Title"
        android:background="@drawable/bg_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/chooseTitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutSD"
        android:layout_below="@+id/chooseTitle">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/chooseSDate"
            android:textAlignment="center"
            android:background="#D0262626"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:text="Choose Start Time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tvStartDate"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="#D0262626"
            android:text="Start Time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layoutSD">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/chooseEDate"
            android:background="#D0262626"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:text="Choose End Time  "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tvEndDate"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="#D0262626"
            android:text="End Time"/>

    </LinearLayout>





</LinearLayout>
