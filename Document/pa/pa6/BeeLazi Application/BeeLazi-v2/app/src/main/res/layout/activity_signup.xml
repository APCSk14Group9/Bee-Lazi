<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/city"
    android:orientation="vertical"
    tools:context="cs300.beelazi.SignupActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/appLoginBackground"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifitcation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/circle_transparent_layout"
        android:text="Please fill in your information"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inputLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#D0262626"
                android:padding="10dp"
                android:src="@drawable/account"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:hint="Your real name"
                android:paddingLeft="10dp"
                android:background="#D0262626"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/realname"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#D0262626"
                android:padding="10dp"
                android:src="@drawable/account_card_details"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:hint="Your Username"
                android:paddingLeft="10dp"
                android:background="#D0262626"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/addusername"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#D0262626"
                android:padding="10dp"
                android:src="@drawable/lock_outline"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:background="#D0262626"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="textPassword"
                android:id="@+id/addpassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#D0262626"
                android:padding="10dp"
                android:src="@drawable/lock_outline"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:hint="Retype Password"
                android:paddingLeft="10dp"
                android:background="#D0262626"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="textPassword"
                android:id="@+id/addpasswordconfirm"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/signupButton"
            android:text="Sign up"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_button" />

    </LinearLayout>
</LinearLayout>